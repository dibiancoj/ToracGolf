@{
    Layout = null;
}

<div class="post-meta hidden-xs">
    <div class="date">
        <span class="icon"><i class="fa fa-calendar"></i></span>
        <span class="month">{{Post.PostDate | date:'MMM'}}</span>
        <span class="day">{{Post.PostDate | date:'dd'}}</span>
    </div>
    <div class="like-box">
        <div class="LikePost btn btn-block btn-xs btn-base btn-icon fa-thumbs-up" (click)="LikeClick(Post.Id, Post.FeedTypeId)">
            <span>{{Post.LikeCount | number}}</span>
        </div>
    </div>
</div>
<div class="post-content-wr">
    <div class="post-meta-top">
        <div class="post-image">
            <img src="{{Post.CourseImagePath}}" class="img-responsive NewsFeedCourseImage" alt="">
        </div>
        <h2 class="post-title">
            <a href="#">{{Post.TitleOfPost}}</a>
        </h2>
    </div>
    <div class="post-content clearfix">
        <div class="post-comments">
            <strong>{{Post.CommentCount}}</strong>
            <div class="fa-comments CommentIcon NewsPostIcon btn btn-block btn-xs btn-base btn-icon">
                comments
            </div>
        </div>
        <div class="post-desc">
            <p *ngFor="#body of Post.BodyOfPost">
                {{body}}
            </p>
        </div>

        <div *ngFor="#comment of Post.Comments">
            <NewsFeedCommentItem [Comment]="comment"></NewsFeedCommentItem>
        </div>

        <div class="row commententer">
            <div class="col-xs-10">
                <input #PostComment class="commententertextbox" type="text" placeholder="Enter A Comment" />
            </div>
            <div class="col-xs-2 NoPadding">
                <div class="fa-floppy-o NewsPostIcon btn btn-block btn-xs btn-base btn-icon" (click)="SaveComment(Post.Id, Post.FeedTypeId, PostComment.value)">SAVE</div>
            </div>
        </div>
    </div>
</div>