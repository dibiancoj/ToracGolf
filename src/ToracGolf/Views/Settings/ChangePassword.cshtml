@{
    Layout = "_ToracGolfLayout";
    ViewBag.Title = "Change Passwords";
}
@model ToracGolf.ViewModels.Settings.ChangePasswordViewModel

@section Breadcrumb{
    @Html.Partial("_Breadcrumb", Model.Breadcrumb)
}

@section TopNav{
    @Html.Partial("_TopNav", new ToracGolf.ViewModels.Navigation.TopNavViewModel(true))
}

@section HandicapStatus{
    @Html.Partial("_HandicapStatus", Model.HandicapStatus)
}

@section Styles{

}

@section Scripts{
    <script src="~/lib/react/react.js"></script>
    <script src="~/lib/react/react-dom.js"></script>
    <script src="~/lib/babel/browser.min.js"></script>
    <script type="text/babel" src="~/js/react/changepassword/changemypassword.js">
    </script>
}

<section class="slice slice-lg bg-image" style="background-image:url(images/backgrounds/SeasonAdd.jpg);">

    @*<modal title="Saved Succesfully" showdialog="ShowSavedSuccessfulModal" primarybuttonclass="btn-primary" bodyhtml="Your Season Has Been Saved Successfully." closebuttontext="Ok" onmodalcloseevent="SaveASeasonDialogOkEvent()">
        </modal>*@

    <div id="ChangeMyPassword" class="wp-section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                    <div class="wp-block default user-form user-form-alpha no-margin">
                        <div class="form-header">
                            <h2>Change My Password</h2>
                        </div>
                        <div class="form-body">
                            <form class="sky-form">
                                @Html.Partial("_AngularTokenSet", Model.TokenSet)
                                <fieldset>
                                    <section>
                                        <label class="label">Current Password</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-edit"></i>
                                            <input id="CurrentPassword" type="password" maxlength="100" />
                                        </label>
                                    </section>
                                    <section>
                                        <label class="label">New Password</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-edit"></i>
                                            <input id="NewPassword1" type="password" maxlength="100" />
                                        </label>
                                    </section>
                                    <section>
                                        <label class="label">Retype New Password</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-edit"></i>
                                            <input id="NewPassword2" type="password" maxlength="100" />
                                        </label>
                                    </section>
                                    <section>
                                        <div class="ValidationSummary form-group">
                                            <div id="ValidationError" class="text-danger validationErrors">
                                                <ul></ul>
                                            </div>
                                        </div>
                                    </section>
                                    <section>
                                        <button id="ChangePassword" class="btn btn-base btn-icon btn-icon-right btn-sign-in pull-right" type="button">
                                            <span>Change Password</span>
                                        </button>
                                    </section>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
