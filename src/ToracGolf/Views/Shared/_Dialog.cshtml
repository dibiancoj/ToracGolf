@model ToracGolf.ViewModels.Dialogs.DialogViewModel

<div id="@Model.DialogHtmlId" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">@Model.DialogTitle</h4>
            </div>
            <div class="modal-body">
                <p>@Model.DialogBody</p>
            </div>
            <div class="modal-footer">
                @foreach (var ButtonToSet in Model.DialogButtons)
                {
                    string isCloseButton = ButtonToSet.IsCloseButton ? @"data-dismiss=modal" : null;

                    <button type="button" class="btn @ButtonToSet.ClassAttribute" @isCloseButton>@ButtonToSet.ButtonText</button>
                }

                @*classes to append
                    btn-default
                    btn-primary*@
            </div>
        </div>
    </div>
</div>