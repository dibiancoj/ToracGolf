                                    <input type="text" class="form-control" placeholder="I want to find ...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-white" type="button">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Home</a>
                        <ul class="dropdown-menu">
                            <li><a asp-route="Dashboard">Dashboard</a></li>
                            <li><a asp-route="NewsFeed">News Feed</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Rounds</a>
                        <ul class="dropdown-menu">
                            <li><a asp-route="AddARound">Add A Round</a></li>
                            <li><a asp-route="ViewRounds">View Rounds</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Courses</a>
                        <ul class="dropdown-menu">
                            <li><a asp-route="AddACourse">Add A Course</a></li>
                            <li><a asp-route="ViewCourses">View Courses</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Seasons</a>
                        <ul class="dropdown-menu">
                            <li><a asp-route="AddASeason">Add A Season</a></li>
                            <li><a asp-route="ViewSeasons">Season Listing</a></li>
