@using ToracLibrary.Core.ExtensionMethods.IEnumerableExtensions;
@{
    Layout = "_ToracGolfLayout";
    ViewBag.Title = "Add A Course";
}
@model  ToracGolf.ViewModels.Courses.CourseAddViewModel
@inject Microsoft.AspNet.Antiforgery.IAntiforgery Xsrf

@section Breadcrumb{
    @Html.Partial("_Breadcrumb", Model.Breadcrumb)
}

@section TopNav{
    @Html.Partial("_TopNav", new ToracGolf.ViewModels.Navigation.TopNavViewModel(true))
}

@section PageDescription{
    Add A New Course
}

@section Styles{
    <link href="~/css/Courses.css" rel="stylesheet" />
}

@section Scripts{

    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular/angular-animate.js"></script>
    <script src="~/js/angular/toracgolfapp.js"></script>
    <script src="~/js/angular/common/validationfactory.js"></script>
    <script src="~/js/angular/courses/courseaddcontroller.js"></script>
}

@functions
{
    public string GetAntiXsrfToken()
    {
        var tokens = Xsrf.GetTokens(Context);
        return tokens.CookieToken + ":" + tokens.FormToken;
    }
}

@*so init is a method in my angular controller. we serialize the model and pass it into that method which set's the scope*@
<section ng-app="toracApp" ng-controller="CourseAddController" ng-init="init(@Newtonsoft.Json.JsonConvert.SerializeObject(Model.CourseAddUserEntered))" class="slice slice-lg bg-image" style="background-image:url(images/backgrounds/LogInBackground.png);">


    <div id="EditTeeLocation" class="wp-section" ng-cloak ng-show="ViewMode=='EditTeeLocation'">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                    <div class="wp-block default user-form user-form-alpha no-margin">
                        <div class="form-header">
                            <h2>Add A New Course</h2>
                        </div>

                        <div class="form-body" >
                            <fieldset>
                                <section>
                                    bla
                                </section>
                            </fieldset>
                            <section>
                                <button id="EditTeeLocation" ng-click="CancelTeeLocation()" class="btn btn-base btn-icon btn-icon-right btn-sign-in pull-right" type="button">
                                    <span>Cancel</span>
                                </button>
                                <button class="btn btn-base btn-icon btn-icon-right btn-sign-in pull-right" type="button">
                                    <span>Save Tee Location</span>
                                </button>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="AddCourse" class="wp-section" ng-show="ViewMode=='AddCourse'">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                    <div class="wp-block default user-form user-form-alpha no-margin">
                        <div class="form-header">
                            <h2>Add A New Course</h2>
                        </div>
                        <div class="form-body" >
                            <form id="frmAddACourse" method="post" ng-submit="processForm()" class="sky-form">
                                <input type="hidden" name="__RequestVerificationToken" value="@GetAntiXsrfToken()" />
                                <fieldset>
                                    <section>
                                        <label asp-for="CourseAddUserEntered.CourseName" class="label"></label>
                                        <label class="input">
                                            <i class="icon-append fa fa-user"></i>
                                            <input type="text" name="CourseName" maxlength="100" ng-model="model.CourseName" />
                                            <span asp-validation-for="CourseAddUserEntered.CourseName" class="text-danger"></span>
                                        </label>
                                    </section>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-6 col-xs-12">
                                                <label asp-for="CourseAddUserEntered.Location" class="label"></label>
                                                <label class="input">
                                                    <i class="icon-append fa fa-user"></i>
                                                    <input type="text" name="Location" ng-model="model.Location" maxlength="100" />
                                                    <span asp-validation-for="CourseAddUserEntered.Location" class="text-danger"></span>
                                                </label>
                                            </div>
                                            <div class="col-md-6 col-xs-12">
                                                <label asp-for="CourseAddUserEntered.StateListing" class="label"></label>
                                                <label class="select">
                                                    <select name="StateListing" ng-model="model.StateListing" asp-for="CourseAddUserEntered.StateListing" asp-items="Model.StateListing"></select>
                                                </label>
                                            </div>
                                        </div>
                                    </section>
                                    <section>
                                        <label asp-for="CourseAddUserEntered.Description" class="label"></label>
                                        <label class="input">
                                            <i class="icon-append fa fa-user"></i>
                                            <input type="text" name="CourseName" maxlength="200" ng-model="model.Description" />
                                            <span asp-validation-for="CourseAddUserEntered.Description" class="text-danger"></span>
                                        </label>
                                    </section>
                                    <section>
                                        <label asp-for="CourseAddUserEntered.OnlyAllow18Holes" class="label" style="display:inline-block;"></label>
                                        <input type="checkbox" name="OnlyAllow18Holes" ng-model="model.OnlyAllow18Holes" />
                                    </section>
                                    <hr />
                                    <section>
                                        @{
                                            bool hasAnyTeeBoxes = Model.CourseAddUserEntered.TeeLocations.AnyWithNullCheck();

                                            string classToAddToSpan = hasAnyTeeBoxes ? string.Empty : "display: inline-block;";

                                        }

                                        <label asp-for="CourseAddUserEntered.TeeLocations" class="label" style="@classToAddToSpan"></label>

                                        @if (!hasAnyTeeBoxes)
                                        {
                                            <span class="label" style="@classToAddToSpan">No Tee Locations Entered</span>
                                        }
                                        else
                                        {
                                            @foreach (var TeeLocation in Model.CourseAddUserEntered.TeeLocations)
                                            {

                                            }
                                        }

                                    </section>
                                    <section>
                                        @Html.Partial("_ValidationSummaryAngular")
                                    </section>
                                    <section>
                                        <button class="btn btn-base btn-icon btn-icon-right btn-sign-in pull-right" type="submit">
                                            <span>Save</span>
                                        </button>

                                        <button id="EditTeeLocation" ng-click="EditTeeLocation()" class="btn btn-base btn-icon btn-icon-right btn-sign-in pull-right" type="button">
                                            <span>Edit Tee Location</span>
                                        </button>
                                    </section>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
