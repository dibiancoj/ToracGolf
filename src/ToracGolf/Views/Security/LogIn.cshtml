@{
    Layout = "_ToracGolfLayout";
    ViewBag.Title = "Log In";
}
@model  ToracGolf.ViewModels.Security.LogInViewModel

@section Breadcrumb{
    @Html.Partial("_Breadcrumb", Model.Breadcrumb)
}

@section TopNav{
    @Html.Partial("_TopNav", new ToracGolf.ViewModels.Navigation.TopNavViewModel(false))
}

@section PageDescription{
    Log In
}

@section Styles{
    <link href="~/css/security.css" rel="stylesheet" />
}

<section class="slice slice-lg bg-image" style="background-image:url(images/backgrounds/LogInBackground.png);">
    <div class="wp-section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                    <div class="wp-block default user-form user-form-alpha no-margin">
                        <div class="form-header">
                            <h2>Sign in to your account</h2>
                        </div>
                        <div class="form-body">
                            <form id="frmLogin" asp-route="LogIn" method="post" class="sky-form">
                                <fieldset>
                                    <section>
                                        <div class="form-group">
                                            <label asp-for="LogInUserEntered.Email" class="label"></label>
                                            <label class="input">
                                                <i class="icon-append fa fa-user"></i>
                                                <input type="email" name="email" asp-for="LogInUserEntered.Email" maxlength="100" />
                                                <span asp-validation-for="LogInUserEntered.Email" class="text-danger"></span>
                                            </label>
                                        </div>
                                    </section>
                                    <section>
                                        <div class="form-group">
                                            <label asp-for="LogInUserEntered.Password" class="label"></label>
                                            <label class="input">
                                                <i class="icon-append fa fa-lock"></i>
                                                <input type="password" name="password" asp-for="LogInUserEntered.Password" maxlength="100" />
                                                <span asp-validation-for="LogInUserEntered.Password" class="text-danger"></span>
                                            </label>
                                        </div>
                                    </section>
                                    <section>
                                        <div class="form-group">
                                            <label asp-for="LogInUserEntered.RememberMe" class="checkbox">
                                                <input type="checkbox" name="remember" checked asp-for="LogInUserEntered.RememberMe" />
                                            </label>
                                        </div>
                                    </section>
                                    <section>
                                        <div class="form-group ValidationSummary">
                                            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                                        </div>
                                    </section>
                                    <section>
                                        <button class="btn btn-base btn-icon btn-icon-right btn-sign-in pull-right" type="submit">
                                            <span>Next Step</span>
                                        </button>
                                    </section>
                                </fieldset>
                            </form>
                        </div>
                        <div class="form-footer">
                            <p>Lost your password? <a href="#" class="ForceBlueColor">Click here to recover.</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>